
<div class="signUp">
<h1 class="sign-up">Update Information</h1>
<%= form_with model: @restaurant, class:"container form-g" do |form| %>
  <div class="form-group">
    <%= form.label :name %><br>
    <%= form.text_field :name,class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :category %><br>
    <%= form.text_field :category,class:"form-control" %><br>
  </div>

  <div class="form-group">
    <%= form.label :resturant_type %><br>
    <%= form.text_field :resturant_type ,class:"form-control"%><br>
  </div>

  <div class="form-group">
    <%= form.label :latitude %><br>
    <%= form.number_field :latitude,class:"form-control"%>
 </div>

 <div class="form-group">
    <%= form.label :longitude %><br>
    <%= form.number_field :longitude,class:"form-control"%>
 </div>

   <div class="form-group">
    <%= form.label :pictures %><br>
    <%= form.file_field :pictures, multiple: true%>
  </div>

<br/>
  <div class="form-group">
    <%= form.submit class:"btn btn-danger" %>
  </div>
<% end %>
</div>