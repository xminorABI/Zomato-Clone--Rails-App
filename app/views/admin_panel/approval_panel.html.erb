<% if flash.any? %>
<% flash.each do |notice, msg|%>
<div class="alert alert-info">
<%= msg%>
</div>
<% end %>
<% end %>

<div class="user-greeting">
<h1>Reviews for Approval </h1>
</div>

<div class="rest-cont">
<% @reviews.each do |review|%>
<div class="card rest-con">
<% @user= User.find(review.user_id)%>
<% @restaurant= Restaurant.find(review.restaurant_id)%>
<div class="card-body">
<h5 class="card-title">Username-: <%= @user.username%></h5>
<h5 class="card-title">Restaurants-: <%= @restaurant.name%></h5>
<h5 class="card-title">Ratings-: <%= review.ratings%></h5>
<h5 class="card-title"> Star Rating-: </h5>
   <% review.stars.to_i.times do  %>
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
  <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
</svg>
<%end%>
<%= form_tag( '/reviews/accept', method: :post, remote: true) do |f| %>
 <%= hidden_field_tag 'review_id', review.id %>
 <%= submit_tag "Accept Review", class:"btn btn-primary"%>
<% end %>
<br/>
<%= link_to "Delete", review_path(review),class:"btn btn-danger", data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
</div>                  
</div>
<% end %>
</div>
