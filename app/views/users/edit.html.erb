<div class="signUp">
<br/>
<h1 class="sign-up">Update User Details</h1>
<%= form_with model: @user,class:"container form-g"  do |form| %>

  <div class="form-group">
    <%= form.label :email %><br>
    <%= form.text_field :email, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :username %><br>
    <%= form.text_field :username, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :password %><br>
    <%= form.password_field :password, class:"form-control" %><br>
  </div>

   <div class="form-group">
    <%= form.label :password_confirmation %><br>
    <%= form.password_field :password , class:"form-control"%><br>
  </div>

   <div class="form-group">
    <%= form.label :latitude %><br>
    <%= form.number_field :latitude, step: :any, class:"form-control" %><br>
  </div>

   <div class="form-group">
    <%= form.label :longitude %><br>
    <%= form.number_field :longitude, step: :any, class:"form-control" %><br>
  </div>


    <%= form.submit "Update User",class:"btn btn-danger"%>
<% end %>

</div>