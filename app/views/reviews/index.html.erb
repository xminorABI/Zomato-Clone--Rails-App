<div class="hotel-heading">
  <h4> Your Reviews</h4>
 </div>

<div class="rest-cont">
<% @user.reviews.reverse_each do |comment| %>
<div class="card rest-con">
 <% @restaurant= Restaurant.find(comment.restaurant_id)%>
    <h3 class="card-header"><%= @restaurant.name %></h3>
    <div class="card-body">
    <h5 class="card-title">Your Review-: <%= comment.ratings %></h5>
<div>
     <h4 class="card-title"> Star Rating-: </h4>
    <% comment.stars.to_i.times do  %>
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
        <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
      </svg>
  <% end %>
</div>
    <%= link_to "Edit", edit_review_path(comment.id), class:"btn btn-secondary"%>
    <%= link_to "Delete",review_path(comment),class:"btn btn-danger", data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  }%>
       </div>           
    </div>
<% end %>
</div>